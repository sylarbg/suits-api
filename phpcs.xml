<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>
    <file>app</file>
    <file>tests</file>
    <exclude-pattern>*/migrations/*</exclude-pattern>
    <arg value="np"/>
    <arg name="colors"/>
    <rule ref="PSR2">
        <exclude name="PSR1.Methods.CamelCapsMethodName"/>
    </rule>
</ruleset>
